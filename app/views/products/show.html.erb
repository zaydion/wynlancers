<div class="container-fluid" style="margin-top: -100px">
<div class="product_profile" style="margin-top: -100px">
<!-- <p id="notice"><%= notice %></p> -->


<div class="container">
<div class="product_head">
<%= image_tag @product.photo%>
<p>
    <%= @product.name %>

</p>
<a href="mailto:edtoro@wynlancers.co">
<input class="btn btn-default" type="submit" value="Contact">
</a>
</div>
</div>
<div class="container">
  <div class="description">
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price_in_cents %> / Hour
</p>
  </div>
</div>

<div class="container">
<div class="profile_feet">
<h3>Reviews</h3>


<% @product.reviews.each do | review | %>
  <p>
  	<%= review.comment %>
  	<br>
    <div class="comment_time" style="font-size: 1em;">
  	<%= time_ago_in_words review.created_at %> ago
    </div>
  </p>
  <% end %>


  <h4>New Review</h4>
  <%= render 'reviews/form' %>


</div>
</div>
